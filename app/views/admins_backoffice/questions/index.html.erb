<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800"><%= t('messages.listing', model: @questions.model_name.human(count: 2)) %></h1>            
</div>
<div class="row">   
  <div class="col-lg-12">
    <div class="card shadow mb-4">        
      <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
        <thead>
          <tr>
            <th>#</th>
            <th><%= translate_attribute @questions, :description %></th>
            <th><%= translate_attribute @questions, :subject %></th>
            <th>
              <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle btn-sm" do %>
                  <i class="fa fa-plus"></i>   
              <% end %>
            </th>
          </tr>
        </thead>  
        <tbody>  
          <% @questions.each do |question| %>
          <tr>
            <td><%= question.id %></td>
            <td><%= question.description.truncate(50) %></td>
            <td><%= question.subject.description.truncate(30) %></td>      
            
            <td style="width: 100px">     
              <%= link_to edit_admins_backoffice_question_path(question), class:"btn btn-primary btn-circle btn-sm" do %>
                <i class="fa fa-edit"></i>   
              <% end %>

              <%= link_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                data: {confirm: t('messages.confirm_with', item: question.description.truncate(15))} do %>
                <i class="fa fa-minus"></i>   
              <% end %>              
            </td>      
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @questions %>
      </div>

    </div>
  </div>