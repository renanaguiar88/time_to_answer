<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800"><%= t('messages.listing', model: @subjects.model_name.human(count: 2)) %></h1>            
</div>
<div class="row">   
  <div class="col-lg-12">
    <div class="card shadow mb-4">        
      <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
        <thead>
          <tr>
            <th>#</th>
            <th><%= translate_attribute @subjects, :description %></th>
            <th>
              <%= link_to new_admins_backoffice_subject_path,  class:"btn btn-success btn-circle btn-sm" do %>
                  <i class="fa fa-plus"></i>   
              <% end %>
            </th>
          </tr>
        </thead>  
        <tbody>  
          <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.id %></td>
            <td><%= subject.description %></td>      
            
            <td style="width: 100px">     
              <%= link_to edit_admins_backoffice_subject_path(subject), class:"btn btn-primary btn-circle btn-sm" do %>
                <i class="fa fa-edit"></i>   
              <% end %>

              <%= link_to admins_backoffice_subject_path(subject), method: :delete, class:"btn btn-danger btn-circle btn-sm", 
                data: {confirm: t('messages.confirm_with', item: subject.description)} do %>
                <i class="fa fa-minus"></i>   
              <% end %>              
            </td>      
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @subjects %>
      </div>

    </div>
  </div>